<% layout("/layouts/boilerplate") %>
<body> 
  
 <div class="row mt-3"> 
  
  <div class="col-8 offset-2">

    <h3>Edit a Listing</h3>
     
    <form method="post" action="/listings/<%= specific._id %>?_method=put" class="needs-validation" novalidate enctype="multipart/form-data">

        <div>
           <label for="title" class="form-label">Title</label>
           <input name="listing[title]" value="<%= specific.title%>" class="form-control" required>
           <div class="invalid-feedback">Please enter a valid Title</div>
           <br>
        </div>

        <div>
           <label for="description" class="form-label">Description</label>
           <textarea name="listing[description]" class="form-control" required><%= specific.description%></textarea>
           <div class="invalid-feedback">Please enter a valid description</div>
           <div class="invalid-feedback">Please enter a valid description</div>
           <br>

        </div>

        <div>
           Original Listing Image  <br>
           <img src="<%= originalImageUrl %>">
           
           <br>

        </div>
          
        <div>
            <label for="image" class="form-label">Upload Image</label>
           <input name="listing[image]" type="file" class="form-control">
           
           <br>

        </div>
        
         
        
        
        <div class="row">

          <div  class="col-md-4">
           <label for="price" class="form-label">Price</label>
           <input name="listing[price]" value="<%= specific.price%>" type="number" class="form-control" required>
           <div class="invalid-feedback">Please enter a valid price</div>
           <br>
          </div>
            
          <div class="col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" value="<%= specific.country%>" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid country</div>
            <br>
           </div>

           
        </div>

        <div>
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" value="<%= specific.location%> " class="form-control" required>
            <div class="invalid-feedback">Please enter a valid location</div>
            <br>
        </div>

        
     
        <button class="btn btn-dark edit-btn mb-2">Edit</button> 
    </form>
  </div>
 </div>
    

     
     
    
</body>
